<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="115.0" prefWidth="427.0"
	style="-fx-background-color: #fff; -fx-border-style: solid; -fx-border-width: 1px; -fx-border-color: #008d54"
	xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="Controllers.STController">

	<top>
		<HBox layoutX="0" layoutY="0" prefHeight="29" prefWidth="400.0"
			style="-fx-background-color: #2cc185">
			<children>
				<HBox>
					<children>
						<ImageView fitHeight="20.0" fitWidth="20.0"
							translateY="4.0">
							<image>
								<Image url="@/images/logo.png" />
							</image>
						</ImageView>
					</children>
					<padding>
						<Insets left="10.0" right="10.0" />
					</padding>
				</HBox>
				<HBox>
					<children>
						<ImageView fitHeight="12.0" fitWidth="75.0" layoutY="2"
							translateY="9.0">
							<image>
								<Image url="@/images/logo-title.png" />
							</image>
						</ImageView>
					</children>
				</HBox>
				<HBox translateX="10" translateY="2">
					<Hyperlink fx:id="tokenLabel" alignment="CENTER"
						textFill="#fff"
						style="-fx-border-color: transparent; -fx-padding: 4 0 4 0;">
						<font>
							<Font size="12" />
						</font>
					</Hyperlink>
				</HBox>
				<Label alignment="CENTER" onMouseClicked="#exit"
					prefHeight="26.0" prefWidth="30.0" style="-fx-font:15px Arial;"
					text="X" textFill="#fff" translateX="7.0" />
			</children>
		</HBox>
	</top>
	<center>
		<VBox prefHeight="119.0" prefWidth="416.0"
			BorderPane.alignment="CENTER">
			<BorderPane.margin>
				<Insets />
			</BorderPane.margin>
			<children>
				<ImageView fx:id="qrcode" fitHeight="75.0" fitWidth="75.0"
					translateX="105.0" translateY="20.0">
					<image>
						<Image url="@/images/qr.png" />
					</image>
				</ImageView>
				<Label fx:id="scanlabel" textFill="black" text="Scan me!"
					translateY="20.0" translateX="112.0" />
				<Label fx:id="SMTPLabel"
					text="Checking SMTP Settings. please wait..." translateX="120.0"
					translateY="-40.0" />
				<JFXTextField fx:id="code" alignment="CENTER"
					focusColor="#008d54" maxWidth="120" onKeyReleased="#checkCode"
					translateX="235.0" translateY="-60.0"
					promptText="Please enter code" />
			</children>
		</VBox>
	</center>
</BorderPane>
