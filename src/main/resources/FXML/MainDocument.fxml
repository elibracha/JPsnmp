<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="root" prefHeight="300.0" prefWidth="635.0"
            style="-fx-background-color: #fff" stylesheets="@/css/root_anchorpane.css"
            xmlns="http://javafx.com/javafx/8" fx:controller="Controllers.MainController">
    <top>
        <AnchorPane fx:id="top" style="-fx-background-color: #2cc185">
            <children>
                <HBox AnchorPane.leftAnchor="5" spacing="10">
                    <HBox alignment="CENTER">
                        <children>
                            <ImageView fx:id="logoImage">
                                <image>
                                    <Image url="@/images/logo.png"/>
                                </image>
                            </ImageView>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER">
                        <children>
                            <ImageView fx:id="logoTitle">
                                <image>
                                    <Image url="@/images/logo-title.png"/>
                                </image>
                            </ImageView>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER">
                        <Hyperlink fx:id="tokenLabel" contentDisplay="CENTER" textFill="#fff">
                            <font>
                                <Font size="12"/>
                            </font>
                        </Hyperlink>
                    </HBox>
                </HBox>
                <HBox fx:id="select_bugs" AnchorPane.rightAnchor="70"  alignment="CENTER">
                    <ImageView fitHeight="25.0" fitWidth="25.0">
                        <image>
                            <Image url="@/images/bugs.png"/>
                        </image>
                    </ImageView>
                </HBox>
                <HBox fx:id="select_settings" AnchorPane.rightAnchor="35"  alignment="CENTER">
                    <ImageView fitHeight="23.0" fitWidth="23.0">
                        <image>
                            <Image url="@/images/settings.png"/>
                        </image>
                    </ImageView>
                </HBox>
                <HBox fx:id="exit" onMouseClicked="#exit" AnchorPane.rightAnchor="0"
                        alignment="CENTER">
                    <ImageView fitHeight="25.0" fitWidth="25.0">
                        <image>
                            <Image url="@/images/clear.png"/>
                        </image>
                    </ImageView>
                </HBox>
            </children>
        </AnchorPane>
    </top>
    <center>
        <StackPane>
            <fx:include fx:id="emailSetting" source="EmailDocument.fxml"/>
            <fx:include fx:id="networkSetting" source="NetworkDocument.fxml"/>
            <fx:include fx:id="debugSetting" source="DebugDocument.fxml"/>
        </StackPane>
    </center>
</BorderPane>
